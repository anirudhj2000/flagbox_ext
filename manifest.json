{
  "manifest_version": 3,
  "name": "FlagBox",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["index.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["screenshotcomponent.html", "index.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "permissions": [
    "tabs",
    "activeTab",
    "downloads",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "scripting",
    "cookies",
    "http://localhost/*",
    "tabCapture"
  ]
}
